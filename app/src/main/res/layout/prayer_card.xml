<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_spacing"
        android:layout_marginStart="@dimen/card_spacing"
        android:layout_marginEnd="@dimen/card_spacing"
        android:layout_gravity="center">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="3"
                  android:paddingTop="20dp"
                  android:paddingBottom="20dp">
        <TextView android:id="@+id/prayer_name" style="@style/PrayerCardLabel"/>
        <TextView android:id="@+id/athan_time" style="@style/PrayerCardText"/>
        <TextView android:id="@+id/iqama_time" style="@style/PrayerCardText"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>