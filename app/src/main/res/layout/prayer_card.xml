<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/defaultMargin"
    android:layout_marginEnd="@dimen/defaultMargin"
    android:layout_marginTop="@dimen/cardSpacing"
    android:layout_marginBottom="@dimen/cardSpacing">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:gravity="center"
        android:weightSum="3">


    <TextView
            android:id="@+id/prayer_name"
            style="@style/PrayerCardLabel" />

        <TextView
            android:id="@+id/athan_time"
            style="@style/PrayerCardText" />

        <TextView
            android:id="@+id/iqama_time"
            style="@style/PrayerCardText" />
    </LinearLayout>

</androidx.cardview.widget.CardView>